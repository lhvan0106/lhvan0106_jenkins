pipeline {
    agent any 
    stages {

        stage('Pull git') {
            git branch: "master", url: 'https://github.com/lhvan0106/lhvan0106_jenkins.git'
        }
        
        stage('Build') {
            if (isUnix()) {
                sh "echo $JAVA_HOME"
                sh "mvn clean install -DskipTests"
            } else {
                bat "echo %JAVA_HOME%"
                bat "mvn clean install -DskipTests"
            }
        }

        stage('Copy File') { 
            steps {
                bat "copy .\\target\\restapi-0.0.1-SNAPSHOT.jar E:\\restapi.jar"
            }
        }
    }
}